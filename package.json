{
  "name": "adds",
  "description": "Javascript client for https://www.aviationweather.gov/ text data server",
  "version": "0.0.0",
  "author": {
    "name": "Forrest Desjardins",
    "email": "desjardinsfg@gmail.com",
    "url": "github.com/fdesjardins"
  },
  "dependencies": {
    "superagent": "^3.8.3",
    "xml-reader": "^2.4.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "mocha": "^5.1.1",
    "nock": "^9.2.6",
    "nyc": "^11.8.0",
    "standard": "^11.0.1"
  },
  "engines": {
    "node": ">=7"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "func-style": [
        2,
        "expression"
      ],
      "prefer-arrow-callback": [
        2,
        {
          "allowNamedFunctions": false
        }
      ]
    }
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "aviation",
    "weather",
    "metars",
    "tafs",
    "gairmets",
    "airsigmets",
    "stations",
    "aircraft reports",
    "aireps",
    "pireps",
    "ADDS",
    "data",
    "client"
  ],
  "license": "MIT",
  "main": "index.js",
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "repository": "fdesjardins/adds",
  "scripts": {
    "test": "standard *.js && nyc ./node_modules/.bin/mocha --opts mocha.opts test.js"
  }
}
